<Window x:Class="ScreenShot.src.capture.CaptureScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CaptureScreen"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Topmost="True"
        WindowStyle="None"
        WindowState="Maximized"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown"
        Deactivated="Window_Deactivated">
    <Window.Background>
        <SolidColorBrush Color="Gray" Opacity="0.01"/>
    </Window.Background>
    <Grid>
        <Canvas x:Name="canvas" Background="Transparent" MouseDown="Canvas_OnMouseDown" MouseMove="Canvas_OnMouseMove" MouseLeave="Canvas_MouseLeave" 
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    </Grid>
</Window>
